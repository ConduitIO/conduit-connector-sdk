{{ define "parameters.table" }}
<table class="no-margin-table">
  <tr>
    <th>Name</th>
    <th>Type</th>
    <th>Required/Optional</th>
    <th>Default</th>
    <th>Description</th>
  </tr>
  {{- range $param := .parameters }}
  <tr>
<td>

`{{ $param.name }}`

</td>
<td>

{{ $param.type }}

</td>
<td>

{{ describeParameterRequirement $param }}

</td>
<td>

`{{ if $param.default }}{{ $param.default }}{{ else }}{{ zeroValueForType $param.type }}{{ end }}`

</td>
<td>

{{ $param.description }}

</td>
  </tr>
  {{- end }}
</table>
{{ end }}
